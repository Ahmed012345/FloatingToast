<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:id="@+id/root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/fragmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Fragment 1"
                android:textAlignment="center"
                android:textSize="24dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/whiteTop"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="#c6e8ef"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:text="White-Mid-Top"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/whiteCenter"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="#c6e8ef"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:text="White-Center"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/whiteBottom"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="#c6e8ef"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:text="White-Mid-Bottom"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/redCenter"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="#c6e8ef"
            android:textAllCaps="false"
            android:text="Red-Center"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>